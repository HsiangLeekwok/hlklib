<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="hlklib_clear_edit_text_default_padding">10dp</dimen>
    <declare-styleable name="ClearEditText">
        <!--编辑框边框颜色-->
        <attr name="cet_edit_normal_border" format="color|reference" />
        <!--编辑框活动时边框颜色-->
        <attr name="cet_edit_active_border" format="color|reference" />
        <!--编辑框内容padding-->
        <attr name="cet_edit_padding" format="dimension|reference" />
        <!--编辑框边角大小-->
        <attr name="cet_edit_corner_size" format="dimension" />
        <!--显示密码明文的眼睛图标-->
        <attr name="cet_edit_icon_eye" format="string" />
        <!--清除输入的图标-->
        <attr name="cet_edit_icon_clear" format="string" />
        <!--输入模式-->
        <attr name="cet_edit_input_type" format="integer">
            <enum name="text" value="0" />
            <enum name="phone" value="1" />
            <enum name="number" value="2" />
            <enum name="password" value="3" />
            <enum name="visiblePassword" value="4" />
        </attr>
        <!--设置最大行数，默认1行，大于1行时自动设置可以多行，否则只能单行-->
        <attr name="cet_edit_max_lines" format="integer" />
        <!--设置最小height-->
        <attr name="cet_edit_minimum_height" format="dimension" />
        <!--设置最大height-->
        <attr name="cet_edit_maximum_height" format="dimension" />
        <attr name="cet_edit_hint" format="string" />
        <attr name="cet_edit_text" format="string" />
        <attr name="cet_edit_text_size" format="dimension" />
        <!--过滤输入值的正则表达式-->
        <attr name="cet_edit_value_extract_regex" format="string" />
        <!--验证输入值的正则表达式-->
        <attr name="cet_edit_value_verify_regex" format="string" />
        <!--最大输入长度-->
        <attr name="cet_edit_value_max_length" format="integer" />
    </declare-styleable>
</resources>