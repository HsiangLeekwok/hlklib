<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/hlklib_ribbon_flag_default_size"
    android:layout_height="@dimen/hlklib_ribbon_flag_default_size">

    <RelativeLayout
        android:id="@+id/hlklib_ribbon_flag_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <TextView
        android:id="@+id/hlklib_ribbon_flag_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-16.5dp"
        android:layout_marginTop="8.25dp"
        android:background="@color/hlklib_ribbon_flag_flag_background"
        android:gravity="center"
        android:paddingLeft="16.5dp"
        android:paddingRight="16.5dp"
        android:rotation="-45"
        android:singleLine="true"
        android:text="@string/hlklib_ribbon_flag_default_text"
        android:textColor="@android:color/white"
        android:textSize="@dimen/hlklib_ribbon_flag_default_text_size" />
</RelativeLayout>